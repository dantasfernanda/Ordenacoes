#include <stdio.h>
#include <stdlib.h>

#define MAX 5

void quicksort(int*v, int inicio, int fim){
    
     int i, j, aux, meio, x; 
     
     i = inicio;
     j = fim;
     meio = (inicio+fim)/2;
     
     x = v[meio];
     
     while (i<=j){
     
       if (v[i] < x){
          i ++;
       }
       else if ( v[j] > x) {
          j--;
       }
       else{
         aux = v[i];
         v[i++] = v[j]
         v[j--] = aux;
       }
     }
     
     if  (inicio < j){
         quicksort(v,inicio,j);
     }
     if (fim > i){
         quicksort(v,i,fim);
     }
}     
           
